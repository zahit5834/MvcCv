@using MvcCv.Models.Entity
@model List<Tbl_Yetenekler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{string renk = ""; }
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <br />
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenek</th>
                                            <th style="width: 290px">Derece</th>
                                            <th >Oran</th>
                                            <th >Sil</th>
                                            <th >Düzenle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            if (x.Oran >= 0 && x.Oran <= 50)
                                            {
                                                renk = "bg-danger";
                                            }
                                            if (x.Oran >= 51 && x.Oran <= 70)
                                            {
                                                renk = "bg-warning";
                                            }
                                            if (x.Oran >= 71 && x.Oran <= 100)
                                            {
                                                renk = "bg-success";
                                            }
                                            <tr>
                                                <td>@x.Id</td>
                                                <td>@x.Yetenek</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="progress-bar @renk" style="width: @x.Oran%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="badge @renk">@x.Oran%</span></td>
                                                <td><a href="#" class="btn btn-danger"> <i class="fas fa-trash"></i> Sil</a></td>
                                                <td><a href="#" class="btn btn-warning">  <i class="fas fa-pencil-alt"></i> Düzenle</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <br />
                                <a href="#" class="btn btn-info">Yeni Yetenek Ekle</a>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>
