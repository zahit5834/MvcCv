@model MvcCv.Models.Entity.Tbl_SosyalMedya
@{
    ViewBag.Title = "SayfaGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Hesap Düzenle</h2>
<br />
<form method="post">
    @Html.Label("Sosyal Medya Adı:")
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />
    @Html.Label("Link:")
    @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
    <br />
    @Html.Label("Icon:")
    @Html.TextBoxFor(x => x.icon, new { @class = "form-control" })

    <br />
    <button class="btn btn-success">Güncelle</button>
</form>
