@using MvcCv.Models.Entity
@model List<Tbl_Sertifikalar>
@{
    int a = 0;
    }
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">

                        <div class="card-body">
                            <div class="tab-content">

                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var x in Model)
                                    {
                                        a++;
                                        if (a % 2 == 0)
                                        {
                                            <div class="time-label">
                                                <a href="/Sertifika/SertifikaGetir/@x.Id" class="btn btn-success">
                                                    <span>

                                                        @x.Tarih
                                                    </span>
                                                </a>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="time-label">
                                                <a href="/Sertifika/SertifikaGetir/@x.Id" class="btn btn-primary">
                                                    <span>

                                                        @x.Tarih
                                                    </span>
                                                </a>
                                            </div>
                                        }
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <i class="fas fa-comment bg-primary"></i>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @x.Aciklama
                                                </div>
                                                @*<div class="timeline-footer">
                        <a href="#" class="btn btn-primary btn-sm">Düzenle</a>
                        <a href="#" class="btn btn-danger btn-sm">Sil</a>
                    </div>*@
                                            </div>
                                        </div>
                                    }
                                </div>

                                <a href="/Sertifika/YeniSertifika" class="btn btn-success">Sertifika Ekle</a>

                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</body>
</html>